<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ViewFilmServlet</servlet-name>
        <servlet-class>controller.ViewFilmServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddMovieServlet</servlet-name>
        <servlet-class>controller.AddMovieServlet</servlet-class>
        <multipart-config>
            <file-size-threshold>1048576</file-size-threshold>
            <max-file-size>5242880</max-file-size>
            <max-request-size>10485760</max-request-size>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>ImageServlet</servlet-name>
        <servlet-class>controller.ImageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addShowTimeServlet</servlet-name>
        <servlet-class>controller.addShowTimeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddCinemaHallServlet</servlet-name>
        <servlet-class>controller.AddCinemaHallServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListCinemaHallsServlet</servlet-name>
        <servlet-class>controller.ListCinemaHallsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageSeatsServlet</servlet-name>
        <servlet-class>controller.ManageSeatsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateSeatServlet</servlet-name>
        <servlet-class>controller.UpdateSeatServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ToggleHallStatusServlet</servlet-name>
        <servlet-class>controller.ToggleHallStatusServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ViewFilmServlet</servlet-name>
        <url-pattern>/ViewFilmServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddMovieServlet</servlet-name>
        <url-pattern>/AddMovieServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ImageServlet</servlet-name>
        <url-pattern>/ImageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addShowTimeServlet</servlet-name>
        <url-pattern>/addShowTimeServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddCinemaHallServlet</servlet-name>
        <url-pattern>/AddCinemaHallServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListCinemaHallsServlet</servlet-name>
        <url-pattern>/ListCinemaHallsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageSeatsServlet</servlet-name>
        <url-pattern>/ManageSeatsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateSeatServlet</servlet-name>
        <url-pattern>/UpdateSeatServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ToggleHallStatusServlet</servlet-name>
        <url-pattern>/ToggleHallStatusServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>views/user/home.jsp</welcome-file>
    </welcome-file-list>
</web-app>
